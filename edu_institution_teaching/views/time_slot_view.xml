<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <!-- view_time_slot_tree -->
    <record id="view_time_slot_tree" model="ir.ui.view">
      <field name="name">edu_institution_teaching.time_slot.tree</field>
      <field name="model">edu_institution_teaching.time_slot</field>
      <field name="priority" eval="8" />
      <field name="arch" type="xml">
        <tree string="time_slot">
          <field name="id" />
          <field name="hour_from" />
          <field name="hour_to" />
        </tree>
      </field>
    </record>

    <!-- view_time_slot_form -->
    <record id="view_time_slot_form" model="ir.ui.view">
      <field name="name">edu_institution_teaching.time_slot.form</field>
      <field name="model">edu_institution_teaching.time_slot</field>
      <field name="priority" eval="8" />
      <field name="arch" type="xml">
        <form string="time_slot">
          <sheet>
            <group col="4">
              <field name="id" />
              <field name="hour_from" />
              <field name="hour_to" />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="act_open_time_slot_view">
      <field name="name">信息录入</field>
      <field name="res_model">edu_institution_teaching.time_slot</field>
      <field name="type">ir.actions.act_window</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="domain">[]</field>
      <field name="context">{}</field>
    </record>


    <!-- time_slot tree -->
    <record model="ir.actions.act_window.view" id="act_open_time_slot_view_tree">
      <field name="act_window_id" ref="act_open_time_slot_view" />
      <field name="sequence" eval="10" />
      <field name="view_mode">tree</field>
      <field name="view_id" ref="view_time_slot_tree" />
    </record>

    <!-- time_slot form -->
    <record model="ir.actions.act_window.view" id="act_open_time_slot_view_form">
      <field name="act_window_id" ref="act_open_time_slot_view" />
      <field name="sequence" eval="10" />
      <field name="view_mode">form</field>
      <field name="view_id" ref="view_time_slot_form" />
    </record>

  </data>
</odoo>