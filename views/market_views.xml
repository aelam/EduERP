<odoo>
    <data>
        <!-- 市场渠道 -->
        <record model="ir.actions.act_window" id="open_academy.action_window_2">
            <field name="name">市场渠道</field>
            <field name="res_model">open_academy.market_channel</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="open_academy.action_window">
            <field name="name">运营渠道管理</field>
            <field name="res_model">open_academy.op_channel</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <!-- market form -->
        <record id="view_open_academy_market_channel_tree" model="ir.ui.view">
            <field name="name">open_academy.market_channel.tree</field>
            <field name="model">open_academy.market_channel</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Maket Channel">
                    <field name="channel_type" />
                    <field name="channel_id" />
                    <field name="info_source" />
                    <field name="address" />
                    <field name="fee" />
                    <field name="is_active" />
                    <field name="note" />
                </tree>
            </field>
        </record>

    </data>
</odoo>